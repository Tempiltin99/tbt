<div class="content-page">
  
    <div class="container">
        <div class="row">
           
            <div class="col-sm-12 col-lg-6">
                <div class="alert alert-secondary mb-3" role="alert">
                    <div class="iq-alert-icon">
                        <i class="ri-information-line"></i>
                    </div>
                    <div class="iq-alert-text">Rasm <b>o'lchami 100x100</b>dan past bo'lmasligi kerak aks holda sifatiga
                        ta'sir qiladi</div>
                </div>
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">logo</h4>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <form action="/admin/briend/add" method="POST" enctype="multipart/form-data">
                            <label for="briend">hamkor tashkilotlar Logosini qo'shish format png / svg </label>
                            <input type="file" class="form-control-file" id="briend" value="Rasm" name="briend">
                            <button type="submit" class="btn btn-primary mr-2 mt-2">Yuborish</button>

                        </form>
                    </div>
                </div>
            </div>


           <div class="col-sm-12 col-lg-6">
                <div class="iq-card">
                    <div class="iq-card-header d-flex justify-content-between">
                        <div class="iq-header-title">
                            <h4 class="card-title">Bosh sahifadagi hamkor tashkilotlar briendi</h4>
                        </div>
                    </div>
                    <div class="iq-card-body">
                        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                                 <div class="carousel-item active">
                                    <img src="https://images.unsplash.com/photo-1645240661865-6f6b77ee61e4?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxlZGl0b3JpYWwtZmVlZHwzfHx8ZW58MHx8fHw%3D&auto=format&fit=crop&w=500&q=60" class="d-block w-100" alt="">
                                 </div>
                                {{#if logos.length}}
                                {{#each logos}}
                                <div class="carousel-item ">                                    
                                    <img src="/images/desktop/{{briend}}" class="d-block w-100" alt="">
                                    <a href="/admin/briend/delete/{{id}}" class="btn btn-dark sliderbtn"> deleted</a>
                                </div>
                                 {{/each }}
                                {{else}}
                                <div class="alert alert-secondary mb-3" role="alert">
                                    <div class="iq-alert-icon">
                                        <i class="ri-information-line"></i>
                                    </div>
                                    <div class="iq-alert-text">sizda hali mavjud emas</div>
                                </div>
                                {{/if}}
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
           
        </div>
    </div>
</div>